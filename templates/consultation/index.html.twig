{% extends 'base.html.twig' %}

{% block title %}Adauga o consultatie!{% endblock %}

{% block body %}
    <div class="row">
        <div class="section-title">Programeaza o consultatie online</div>
    </div>
    <div class="">
        <div class="form">
            {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Nume</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Telefon</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.phone, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="email" class="col-sm-2 col-form-label">Mesaj</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.message, { 'attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <div class="form-check">
                            {{ form_widget(form.acceptGdpr, { 'attr': { 'class': 'form-check-input' } }) }}
                            <label class="form-check-label" for="gdpr">
                                GDPR
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-10">
                        <div class="form-check">
                            {{ form_widget(form.acceptTerms, { 'attr': { 'class': 'form-check-input' } }) }}
                            <label class="form-check-label" for="terms">
                                Terms
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
